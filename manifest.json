{
  "manifest_version": 2,

  "name": "Kiwi",
  "description": "Let kiwi track things for you",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Kiwi"
  },

  "options_page": "options.html",

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tts",
    "storage",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": [
      "firebase.js",
      "background.js"
    ]
  },

  "content_security_policy": "script-src 'self' https://*.firebaseio.com/; object-src 'self'",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "js": [
        "bower_components/jquery/dist/jquery.js",
        "bower_components/underscore/underscore.js",
        "jQuery.getPath.js",
        "content_script.js"
      ]
    }
  ]
}
